# Используем официальный образ с JDK 17
FROM openjdk:17-jdk-slim

# Устанавливаем зависимости для Maven и Docker
RUN apt-get update && apt-get install -y \
    maven \
    docker.io \
    curl \
    ca-certificates

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем pom.xml и исходный код
COPY . /app

# Устанавливаем зависимости с помощью Maven
RUN mvn clean install

# Открываем порты для Jenkins
EXPOSE 8080 50000

# Устанавливаем Docker внутри контейнера (для работы с Docker-in-Docker)
RUN curl -fsSLO https://get.docker.com/builds/Linux/x86_64/docker-17.04.0-ce.tgz \
    && tar xzvf docker-17.04.0-ce.tgz \
    && mv docker/docker /usr/local/bin \
    && rm -r docker docker-17.04.0-ce.tgz

# Команда для запуска вашего приложения (если нужно)
CMD ["mvn", "spring-boot:run"]
